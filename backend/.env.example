# ===== Core server =====
PORT=4000
NODE_ENV=development

# ===== Database =====
MONGO_URI=mongodb://127.0.0.1:27017/mcq_battle

# ===== Auth (JWT) =====
JWT_SECRET=replace-with-a-very-long-random-string
JWT_EXPIRES_IN=7d

# ===== CORS =====
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173

# ===== Rate limiting =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# ===== Pusher (server credentials) =====
PUSHER_APP_ID=your-app-id
PUSHER_KEY=your-key
PUSHER_SECRET=your-secret
PUSHER_CLUSTER=ap2

# ===== Game settings =====
GAME_DURATION_MS=600000        # total match duration (10 minutes)
GAME_MAX_WRONG=3               # DQ after N wrong answers
GAME_DIFFICULTY=               # '', or easy|medium|hard default filter

# Per-question timer (bonus)
QUESTION_DURATION_MS=30000     # 30s per question

# Leaderboard (bonus)
LEADERBOARD_LIMIT=20